// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  name      String
  surname   String
  dni       String   @unique
  email     String   @unique
  createdAt DateTime @default(now())
  bookings  Booking[]
  histories BookingHistory[]
}

model Booking {
  id        String   @id @default(cuid())
  className String
  price     String   
  time      String
  days      String   // Keeping this for backward compatibility or recurring info
  date      String   // Format YYYY-MM-DD for specific attendance
  userId    String
  user      User     @relation(fields: [userId], references: [id])
  createdAt DateTime @default(now())
}

model BookingHistory {
  id        String   @id @default(cuid())
  className String
  price     String   
  time      String
  days      String
  date      String   // Format YYYY-MM-DD
  userId    String
  user      User     @relation(fields: [userId], references: [id])
  createdAt DateTime @default(now())
}
